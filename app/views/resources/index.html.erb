<%= content_for :body do %>
    <p id="notice"><%= notice %></p>

    <h1>Resources</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @resources.each do |resource| %>
          <tr>
            <td><%= link_to resource.title, resource.url, target: "_blank" %></td>
            <td><%= resource.description %></td>
            <td><%= link_to 'Show', resource, class: 'btn btn-sm btn-outline-primary' %></td>
            <td><%= link_to 'Edit', edit_resource_path(resource), class: 'btn btn-sm btn-outline-warning' %></td>
            <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New', new_resource_path, class: 'btn btn-sm btn-outline-primary' %>
<% end %>

<%= render 'layouts/small_page' %>