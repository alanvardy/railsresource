<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-8 mx-auto">
    <h1>Topics</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @topics.each do |topic| %>
          <tr>
            <td><%= topic.long_title %></td>
            <td><%= link_to 'Show', topic, class: 'btn btn-sm btn-outline-primary' %></td>
            <td><%= link_to 'Edit', edit_topic_path(topic), class: 'btn btn-sm btn-outline-warning' %></td>
            <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Topic', new_topic_path %>

  </div>
</div>
