<div class="row">
    <div class="my-5 p-3 rounded bg-grey0 col-12 col-lg-6 offset-lg-3">
      <p id="notice"><%= notice %></p>

      <h1>Categories</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.title %></td>
              <td><%= category.description %></td>
              <td><%= link_to 'Show', category, class: 'btn btn-sm btn-outline-primary' %></td>
              <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-outline-warning' %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Category', new_category_path %>
    </div>
</div>