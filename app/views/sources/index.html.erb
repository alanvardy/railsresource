<%= content_for :body do %>
  <p id="notice"><%= notice %></p>

  <h1>Sources</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Abbr</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sources.each do |source| %>
        <tr>
          <td><%= source.title %></td>
          <td><%= source.abbr %></td>
          <td><%= source.color %></td>
          <td><%= link_to 'Show', source, class: 'btn btn-sm btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_source_path(source), class: 'btn btn-sm btn-outline-warning' %></td>
          <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Source', new_source_path, class: 'btn btn-sm btn-outline-primary' %>
<% end %>

<%= render 'layouts/small_page' %>